{
  "openapi": "3.1.0",
  "info": {
    "title": "Finance Assistant API",
    "description": "API pre ChatGPT - finančné dáta",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://finance-management-system-production.up.railway.app"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "operationId": "healthCheck",
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/gpt/accounts/list": {
      "get": {
        "operationId": "listAccounts",
        "summary": "Zoznam bankových účtov",
        "responses": {
          "200": {
            "description": "Zoznam účtov"
          }
        }
      }
    },
    "/api/gpt/transactions/summary": {
      "get": {
        "operationId": "getTransactionsSummary",
        "summary": "Zhrnutie transakcií - výdavky a príjmy",
        "parameters": [
          {
            "name": "days",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 30
            },
            "description": "Počet dní spätne"
          }
        ],
        "responses": {
          "200": {
            "description": "Zhrnutie transakcií"
          }
        }
      }
    },
    "/api/gpt/transactions/recent": {
      "get": {
        "operationId": "getRecentTransactions",
        "summary": "Posledné transakcie",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Počet transakcií"
          }
        ],
        "responses": {
          "200": {
            "description": "Zoznam transakcií"
          }
        }
      }
    },
    "/api/gpt/categories/list": {
      "get": {
        "operationId": "listCategories",
        "summary": "Zoznam kategórií výdavkov",
        "responses": {
          "200": {
            "description": "Zoznam kategórií"
          }
        }
      }
    }
  }
}

